<% layout("/layouts/boilerplate") %>

<div class="row">
    <div class="col-8 offset-2">
        <!-- Listing Title -->
        <% if (listing && listing.title) { %>
            <h3><%= listing.title %></h3>
        <% } else { %>
            <p class="text-danger">Listing title is missing.</p>
        <% } %>

        <!-- Listing Image and Details -->
        <div class="card col-6">
            <img 
                src="<%= listing.image?.url || '/images/default.jpg' %>" 
                class="card-img-top show-img" 
                alt="Listing Image"
            >
            <div class="card-body">
                <p class="card-text">
                    <%= listing.description || 'No description provided.' %> <br>
                    &#8377;<%= (listing.price || 0).toLocaleString("en-IN") %> <br>
                </p>
            </div>
        </div>

        <!-- Listing Info -->
        <ul>
            <li>Description: <%= listing.description || 'No description provided.' %></li>
            <li>Price: &#8377;<%= (listing.price || 0).toLocaleString("en-IN") %></li>
            <li>Location: <%= listing.location || 'Location not available.' %></li>
            <li>Country: <%= listing.country || 'Country not specified.' %></li>
            <li>Image URL: <%= listing.image?.url || 'N/A' %></li>
        </ul>

        <!-- Action Buttons -->
        <div class="d-flex justify-content-start gap-2 mt-3">
            <% if (listing && listing._id) { %>
                <!-- Edit Button -->
                <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark">Edit</a>

                <!-- Delete Button -->
                <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE" onsubmit="return confirm('Are you sure you want to delete this listing?');">
                    <button class="btn btn-dark">Delete</button>
                </form>
            <% } else { %>
                <p class="text-danger">Actions unavailable. Invalid listing ID.</p>
            <% } %>
        </div>

        <hr class="my-4">

        <!-- Review Form -->
        <% if (listing && listing._id) { %>
            <div>
                <h4>Leave a Review</h4>
                <form action="/listings/<%= listing._id %>/reviews" method="POST">
                    <!-- Rating Input -->
                    <div class="mb-3">
                        <label for="rating" class="form-label">Rating</label>
                        <input 
                            type="range" 
                            min="1" 
                            max="5" 
                            id="rating" 
                            name="review[rating]" 
                            class="form-range" 
                            required>
                    </div>

                    <!-- Comment Input -->
                    <div class="mb-3">
                        <label for="comment" class="form-label">Comments</label>
                        <textarea 
                            name="review[comment]" 
                            id="comment" 
                            cols="30" 
                            rows="5" 
                            class="form-control" 
                            placeholder="Write your review here..." 
                            required>
                        </textarea>
                    </div>

                    <!-- Submit Button -->
                    <button type="submit" class="btn btn-outline-dark">Submit</button>
                </form>
            </div>
        <% } else { %>
            <p class="text-danger">Review form unavailable. Invalid listing ID.</p>
        <% } %>

        <hr class="my-4">

        <!-- Reviews Section -->
        <h4>Reviews</h4>
        <% if (listing && listing.reviews && listing.reviews.length > 0) { %>
            <% for (let review of listing.reviews) { %>
                <div class="col-md-6 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= review.author.username || 'Anonymous' %>
                            </h5>
                            <p class="card-text">
                                <%= review.comment || 'No comment provided.' %>
                            </p>
                            <p>
                                Rating: <strong><%= review.rating || 'N/A' %></strong>
                            </p>
                        </div>
                    </div>
                </div>
            <% } %>
        <% } else { %>
            <p class="text-muted">No reviews available for this listing.</p>
        <% } %>
    </div>
</div>
