<% layout("/layouts/boilerplate") %>
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Listing Title -->
            <h3 class="text-center mb-4">
                <%= listing?.title || '<span class="text-danger">Listing title is missing.</span>' %>
            </h3>

            <!-- Listing Image and Details -->
            <div class="card mb-4 shadow-sm">
                <img 
                    src="<%= listing?.image?.url || '/images/default.jpg' %>" 
                    class="card-img-top show-img" 
                    alt="Listing Image">
                <div class="card-body">
                    <p class="card-text">
                        <strong>Owned By:</strong> <i><%= listing?.owner?.username || 'Unknown' %></i><br>
                        <strong>Description:</strong> <%= listing?.description || 'No description provided.' %> <br>
                        <strong>Price:</strong> &#8377;<%= (listing?.price || 0).toLocaleString("en-IN") %> <br>
                        <strong>Location:</strong> <%= listing?.location || 'Not specified' %> <br>
                        <strong>Country:</strong> <%= listing?.country || 'Not specified' %> <br>
                    </p>
                </div>
            </div>

            <!-- Action Buttons -->
            <% if (currentUser && listing && currentUser._id.toString() === listing.owner._id.toString()) { %>
                <div class="d-flex gap-3 justify-content-center mb-4">
                    <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark">Edit</a>
                    <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE" 
                        onsubmit="return confirm('Are you sure you want to delete this listing?');">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </div>
            <% } else { %>
                <p class="text-danger text-center">You do not have permission to edit or delete this listing.</p>
            <% } %>

            <hr>
            <!-- Review Form -->
            <% if (listing?._id) { %>
                <div class="card p-3 mb-4">
                    <% if(currentUser) {%>
                    <h4 class="text-center">Leave a Review</h4>
                    <form action="/listings/<%= listing._id %>/reviews" method="POST">
                        <div class="mb-3">
                            <label for="rating" class="form-label">Rating</label>
                            <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range" required>
                        </div>
                        <div class="mb-3">
                            <label for="comment" class="form-label">Comments</label>
                            <textarea name="review[comment]" id="comment" class="form-control" placeholder="Write your review here..." required></textarea>
                        </div>
                        <button type="submit" class="btn btn-outline-dark w-100">Submit</button>
                    </form>
                    <% } %>
                </div>
            <% } else { %>
                <p class="text-danger text-center">Review form unavailable. Invalid listing ID.</p>
            <% } %>

            <hr>

            <!-- Reviews Section -->
            <h4 class="text-center">All Reviews</h4>
            <div class="row justify-content-center">
                <% if (listing?.reviews?.length) { %>
                    <% listing.reviews.forEach(review => { %>
                        <div class="col-md-5 mb-3">
                            <div class="card shadow-sm p-3">
                                <h5 class="card-title"><%= review.author.username %></h5>
                                <p class="card-text"><%= review.comment %></p>
                                <p class="text-muted">‚≠ê <%= review.rating %>/5</p>
                                <form method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" 
                                    onsubmit="return confirm('Are you sure you want to delete this review?');">
                                    <button class="btn btn-sm btn-danger">Delete</button>
                                </form>
                            </div>
                        </div>
                    <% }) %>
                <% } else { %>
                    <p class="text-muted text-center">No reviews yet.</p>
                <% } %>
            </div>
        </div>
    </div>
</div>
