<% layout("layouts/boilerplate") %>
<div class="d-flex justify-content-center align-items-center vh-100 bg-light">
    <div class="card shadow-lg rounded-3" style="width: 400px;">
        <div class="card-body p-4">
            <h2 class="card-title text-center mb-4">Log In to Roomify</h2>
            <form action="/login" method="post" class="needs-validation" novalidate>
                <!-- Username Field -->
                <div class="mb-3">
                    <label for="username" class="form-label">Username or Email</label>
                    <input 
                        type="text" 
                        id="username" 
                        name="username" 
                        placeholder="Enter your username or email" 
                        class="form-control form-control-lg" 
                        required>
                    <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback">Please enter your username or email.</div>
                </div>

                <!-- Password Field -->
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input 
                        type="password" 
                        id="password" 
                        name="password" 
                        placeholder="Enter your password" 
                        class="form-control form-control-lg" 
                        required>
                    <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback">Please enter your password.</div>
                </div>

                <!-- Submit Button -->
                <div class="mb-3">
                    <button type="submit" class="btn btn-primary btn-lg w-100">
                        Log In
                    </button>
                </div>

                <!-- Additional Links -->
                <div class="text-center">
                    <p class="mb-0">Don't have an account? <a href="/signup" class="text-primary">Sign Up</a></p>
                    <p class="mb-0"><a href="/forgot-password" class="text-secondary">Forgot Password?</a></p>
                </div>
            </form>
        </div>
    </div>
</div>
